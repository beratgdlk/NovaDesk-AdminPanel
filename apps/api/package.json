{
  "name": "@onlyjs/api",
  "version": "0.0.1",
  "config": {
    "envFile": "../../config/apps/api/.env"
  },
  "scripts": {
    "build": "dotenvx run --quiet -f ../../config/apps/api/.env -- bun ./src/core/build.ts",
    "emails:preview": "email dev --dir src/emails --port 3333",
    "knip": "knip --workspace apps/api",
    "dev": "dotenvx run --quiet -f ../../config/apps/api/.env -- nodemon",
    "serve": "dotenvx run --quiet -f ../../config/apps/api/.env -- bun run dev",
    "start": "dotenvx run --quiet -f ../../config/apps/api/.env -- bun ../../dist/apps/api/index.js",
    "prisma": "cd ../../packages/database && bun run prisma"
  },
  "type": "module",
  "dependencies": {
    "@ai-sdk/langchain": "^1.0.0-beta.22",
    "@ai-sdk/openai": "^2.0.0-beta.10",
    "@elysiajs/bearer": "1.2.0",
    "@elysiajs/cors": "1.2.0",
    "@elysiajs/cron": "1.2.0",
    "@elysiajs/static": "1.2.0",
    "@elysiajs/swagger": "1.2.2",
    "@langchain/core": "^0.3.24",
    "@langchain/langgraph": "^0.2.28",
    "@langchain/langgraph-checkpoint-postgres": "^0.0.5",
    "@langchain/mcp-adapters": "^0.5.2",
    "@langchain/openai": "^0.5.16",
    "@onlyjs/db": "workspace:*",
    "@onlyjs/shared-config": "workspace:*",
    "@react-email/components": "^0.0.33",
    "@types/jsonwebtoken": "^9.0.10",
    "ai": "^5.0.0-beta.22",
    "better-auth": "^1.2.7",
    "elysia": "1.2.25",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.9.1",
    "pdf-parse": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "redis": "^4.7.0",
    "slugify": "^1.6.6",
    "word-extractor": "^1.0.4"
  },
  "devDependencies": {
    "@types/http-errors": "^2.0.4",
    "@types/pg": "^8.15.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "bun-plugin-dts": "0.3.0",
    "nodemon": "^3.0.2",
    "prisma-case-format": "^2.2.1",
    "prismabox": "^1.1.24",
    "react-email": "^3.0.7"
  },
  "main": "./src/index.ts",
  "private": true,
  "imports": {
    "#*": "./src/*"
  }
}
